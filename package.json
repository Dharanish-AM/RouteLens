{
  "name": "routelens",
  "displayName": "RouteLens",
  "description": "Discover all Express/Fastify endpoints visually in your VS Code workspace.",
  "version": "0.0.9",
  "type": "commonjs",
  "icon": "images/routelens.png",
  "publisher": "DharanishAM",
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "./extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dharanish-AM/RouteLens"
  },
  "activationEvents": [
    "onView:endpointExplorer",
    "onCommand:extension.scanEndpoints",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.scanEndpoints",
        "title": "Scan Project",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "routelens",
          "title": "RouteLens",
          "icon": "images/routelens.svg"
        }
      ]
    },
    "views": {
      "routelens": [
        {
          "id": "endpointExplorer",
          "name": "RouteLens Endpoint Explorer",
          "icon": "images/routelens.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "endpointExplorer",
        "contents": "ðŸ‘‹ Welcome to RouteLens!\n\n[Scan Project](command:extension.scanEndpoints) to discover all Express/Fastify endpoints in your workspace."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.scanEndpoints",
          "when": "view == endpointExplorer || viewItem == endpointExplorer",
          "group": "navigation@1"
        }
      ]
    }
  },
  "dependencies": {
    "@babel/parser": "^7.25.0",
    "@babel/traverse": "^7.25.0",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "acron": "^1.0.5",
    "glob": "^10.3.3"
  }
}
